<!DOCTYPE html>
<html>
<head>

    <title>DES - @ViewBag.Title</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="~/Content/img/logo-fav.png">

    <link href="~/Content/lib/perfect-scrollbar/css/perfect-scrollbar.min.css" rel="stylesheet" />
    <link href="~/Content/lib/jquery.gritter/css/jquery.gritter.css" rel="stylesheet" />
    <link href="~/Content/lib/material-design-icons/css/material-design-iconic-font.min.css" rel="stylesheet" />

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link href="~/Content/css/style.min.css" rel="stylesheet" />
    <link href="~/Content/css/custom.css" rel="stylesheet" />

</head>
<body>
    <div class="">
            @RenderBody()
    </div>
    <script src="~/Content/lib/jquery/jquery.min.js"></script>
    <script src="~/Content/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Content/lib/jquery.gritter/js/jquery.gritter.js"></script>
    <script src="~/Content/js/main.js"></script>
    <script src="~/Content/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            //initialize the javascript
            App.init();
        });
    </script>

    @RenderSection("scripts", required: false)
    <style>
        body {
            background-color: #fff;
        }
    </style>
</body>
</html>
