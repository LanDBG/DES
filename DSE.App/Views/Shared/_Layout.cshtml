<!DOCTYPE html>
<html>
<head>

    <title>XMerge @ViewBag.Title</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="~/Content/img/logo-fav.png">

    <link href="~/Content/lib/perfect-scrollbar/css/perfect-scrollbar.min.css" rel="stylesheet" />
    <link href="~/Content/lib/material-design-icons/css/material-design-iconic-font.min.css" rel="stylesheet" />
    
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link href="~/Content/css/style.min.css" rel="stylesheet" />
    <link href="~/Content/css/custom.css" rel="stylesheet" />


    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
    @RenderSection("css", required: false)
</head>
<body>
    @{
        string hideSidebar = ViewBag.hideSidebar != null && ViewBag.hideSidebar == true ? "hide-sidebar" : "";
    }
    @{ 
        bool collap = ViewBag.Collap != null ? ViewBag.Collap : false;
        string sollapClass = collap ? "be-collapsible-sidebar-collapsed" : "";
    }
    <div class="be-wrapper be-collapsible-sidebar @sollapClass">@*@hideSidebar*@
        @Html.Partial("_PartialNavbar")
        @Html.Partial("_PartialLeftSideBar")
        <div class="be-content">
           
                @RenderBody()
          
        </div>
        @*@Html.Partial("_PartialRightSideBar")*@
    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@

    <script src="~/Content/lib/jquery/jquery.min.js"></script>
    <script src="~/Content/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Content/js/main.js"></script>
    <script src="~/Content/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Content/lib/moment.js/min/moment.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            //initialize the javascript
            App.init();
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
